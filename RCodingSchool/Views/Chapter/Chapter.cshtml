@model List<RCodingSchool.ViewModels.ChapterVM>

@{
    ViewBag.Title = "Subject";
}

<div class="container">
    <div class="row">
            <div class="col-sm-4 col-md-4">
                <div class="panel-group" id="accordion">

               @foreach (var el in Model)
                {
                      <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="@("#collapse" + el.Id)">@el.Name</a>
                                    @if (this.User.IsInRole("Teacher"))
                                    {
                                    <a href="@Url.Action("CreateTopic", "Chapter", new { id = el.Id })"><i class="fa fa-plus pull-right" aria-hidden="true"></i></a>
                                    }
                                </h4>
                            </div>
                            <div id="@("collapse" + el.Id)" class="panel-collapse collapse">
                                <div class="panel-body list-group">
                                    @foreach (var x in el.Topics)
                                    {
                                        <a href="#" onclick="d(@x.Id)" class="list-group-item list-group-item-action">@x.Name</a>
                                    }
                                </div>
                            </div>
                        </div>
                  }
                </div>
            </div>
            <div class="col-sm-8 col-md-8">
                <div class="well" id="currentTopic">
                    @{
                        Html.RenderAction("topic", Model[0].Topics.First());
                    }
                </div>
            </div>
    </div>
</div>

@section Script
{
<script>
    function d(id) {
        var url = "/chapter/topic/";
        $.post(url, { id: id })
         .done(function (response) {
             $("#currentTopic").html(response);
         });
    }
</script>
}