@model List<StudLine.ViewModels.TeacherVM>
@{
    ViewBag.Title = "Teachers";
}

<h2>Викладачі:</h2>
<div class="container">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Прізвище</th>
                    <th>Ім'я</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                         <td>@x.User.LastName</td>
                         <td>@x.User.FirstName</td>
                         <td>@x.User.Email</td>
                    </tr>
                 }
            </tbody>
        </table>
    </div>
</div>

