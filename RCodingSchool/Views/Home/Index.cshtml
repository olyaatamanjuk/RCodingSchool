@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-4 col-md-4 col-xs-12 col-sm-6 ">
        <div class="main-cols">
            <div class="page-header text-center">
                <h3>Предмети</h3>
            </div>
            <div class="body-content text-center">
                <a href="@Url.Action("Subject", "Subject")"><i class="fa fa-book fa-5x" aria-hidden="true"></i></a>
                <br>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-xs-12 col-sm-6">
        <div class="main-cols">
            <div class="page-header text-center">
                <h3>Завдання</h3>
            </div>
            <div class="body-content text-center">
                <a href="@Url.Action("Tasks", "Subject")"><i class="fa fa-thumb-tack fa-5x" aria-hidden="true"></i></a>
                <br>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-xs-12 col-sm-6">
        <div class="main-cols">
            <div class="page-header text-center">
                <h3>Викладачі</h3>
            </div>
            <div class="body-content text-center">
                <a href="@Url.Action("Teachers", "Group")"><i class="fa fa fa-graduation-cap fa-5x" aria-hidden="true"></i></a>
                <br>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-xs-12 col-sm-6">
        <div class="main-cols">
            <div class="page-header text-center">
                <h3>Профіль</h3>
            </div>
            <div class="body-content text-center">
                <a href="@Url.Action("EditAccount", "Account")"><i class="fa fa-user-circle-o fa-5x" aria-hidden="true"></i></a>
                <br>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-xs-12 col-sm-6">
        <div class="main-cols">
            <div class="page-header text-center">
                <h3>Новини</h3>
            </div>
            <div class="body-content text-center">
                <a href="@Url.Action("News", "Home")"><i class="fa fa-newspaper-o fa-5x" aria-hidden="true"></i></a>
                <br>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-xs-12 col-sm-6">
        <div class="main-cols">
            @if (User.IsInRole("Student"))
            {
                <div class="page-header text-center">
                    <h3>Повідомлення</h3>
                </div>
                <div class="body-content text-center">
                    <a href="@Url.Action("Message", "Message")"><i class="fa fa-comments fa-5x" aria-hidden="true"></i></a>
                    <br>
                </div>}
            else
            {
                <div class="page-header text-center">
                    <h3>Адміністрування</h3>
                </div>
                <div class="body-content text-center">
                    <a href="@Url.Action("Users", "Account")"><i class="fa fa-wrench fa-5x" aria-hidden="true"></i></a>
                    <br>
                </div>
            }
        </div>
    </div>
</div>
