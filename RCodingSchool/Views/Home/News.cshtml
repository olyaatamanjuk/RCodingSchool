@model RCodingSchool.ViewModels.NewsListVM
@{
    ViewBag.Title = "News";
}
<div class="row">
    <div class="col-sm-12 col-xs-12 col-lg-9 col-md-9 ">
@for (int i = 0; i < Model.AllNews.Count(); i++)
{
        <article class="post">
            <header>
                <h2>@Model.AllNews[i].Title</h2>
                <small class="text-muted"><i class="fa fa-clock-o" aria-hidden="true"></i> @Model.AllNews[i].Date</small>
                <hr />
            </header>
            <div class="lead">@Model.AllNews[i].Description</div>
            <br>
            <a href="@Url.Action("NewsDetail", new { id = Model.AllNews[i].Id })" title="">
                <button class="btn btn-default">Деталі</button>
            </a>
            <hr />
        </article>
}
    </div>
    <aside class="col-lg-3 col-md-3">
        <h4 ><i class="fa fa-calendar fa-x2" aria-hidden="true"></i> Архів новин</h4>
        <ol class="list-unstyled">
            <li><a href="#" class="list-group-item">Листопад 2017</a></li>
            <li><a href="#" class="list-group-item">Жовтень 2017</a></li>
            <li><a href="#" class="list-group-item">Вересень 2017</a></li>
            <li><a href="#" class="list-group-item">Серпень 2017</a></li>
            <li><a href="#" class="list-group-item">Липень 2017</a></li>
            <li><a href="#" class="list-group-item">Червень 2017</a></li>
            <li><a href="#" class="list-group-item"><i class="fa fa-angle-left" aria-hidden="true"></i>  Попередні </a></li>
        </ol>
    </aside>
</div>
<div class="text-center">
    <ul class="pagination">
        <li><a href="#">&laquo;</a></li>
        <li><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        <li><a href="#">&raquo;</a></li>
    </ul>
</div>
