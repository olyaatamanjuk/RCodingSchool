
@using PagedList
@using PagedList.Mvc
@model PagedList<RCodingSchool.ViewModels.NewsVM>
@{
    ViewBag.Title = "News";
}
<div class="row">
    <div class="col-sm-12 col-xs-12 col-lg-9 col-md-9 ">
@foreach (var item in Model)
{
        <article class="post">
            <header>
                <h2>@item.Title</h2>
                <small class="text-muted"><i class="fa fa-clock-o" aria-hidden="true"></i> @item.Date</small>
                <hr />
            </header>
            <div class="lead">@item.Description</div>
            <br>
            <a href="@Url.Action("NewsDetail", new { id = item.Id })" title="">
                <button class="btn btn-default">Деталі</button>
            </a>
            <hr />
        </article>
}
    </div>
    <aside class="col-lg-3 col-md-3">
        <a href="@Url.Action("CreateNews")" title="">
            <h4><i class="fa fa-newspaper-o fa-x2" aria-hidden="true"></i> Добавити</h4>
        </a>
        <hr />
        <h4 ><i class="fa fa-calendar fa-x2" aria-hidden="true"></i> Архів новин</h4>
        <ol class="list-unstyled">
            <li><a href="#" class="list-group-item">Листопад 2017</a></li>
            <li><a href="#" class="list-group-item">Жовтень 2017</a></li>
            <li><a href="#" class="list-group-item">Вересень 2017</a></li>
            <li><a href="#" class="list-group-item">Серпень 2017</a></li>
            <li><a href="#" class="list-group-item">Липень 2017</a></li>
            <li><a href="#" class="list-group-item">Червень 2017</a></li>
            <li><a href="#" class="list-group-item"><i class="fa fa-angle-left" aria-hidden="true"></i>  Попередні </a></li>
        </ol>
    </aside>
</div>
<div class="text-center">
    <div class="col-md-12">
        <div class="pagination">
            @Html.PagedListPager(Model, page => Url.Action("News", new { page, pageSize = Model.PageSize }))
        </div>
    </div>
</div>
