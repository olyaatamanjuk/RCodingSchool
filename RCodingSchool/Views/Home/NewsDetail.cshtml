@model RCodingSchool.ViewModels.NewsVM
@{
    ViewBag.Title = "NewsDetail";
}

<div class="media jumbotron">
    @using (Html.BeginForm("NewsDetail", "Home", FormMethod.Post, new { role = "form" }))
    {
        <div class="media-left">
            <span class="glyphicon glyphicon-education"></span>
        </div>
            <div class="media-body">
                @Html.HiddenFor(m => m.Id)
                <h2 class="media-heading">@Model.Title</h2>
                <h3>@Model.Description</h3>
                @Model.Date
                <hr>


                @for (int i = 0; i < @Model.Comments.Count; i++)
                {
                    @Html.HiddenFor(m => m.Comments[i].Id)
                    @Html.HiddenFor(m => m.Comments[i].NewsId)

                    <input type="hidden" name="Comment.Id" />
                        <div class="media comment">
                            <div class="media-body">
                                @Html.HiddenFor(m => m.Comments[i].User.Id)
                                <h5 class="media-heading">@Model.Comments[i].User.LastName  @Model.Comments[i].User.FirstName</h5>
                                <h5 class="media-heading">@Model.Comments[i].Date</h5>
                                <hr>
                                <p>@Model.Comments[i].Text</p>
                            </div>
                        </div>  }
                <div class="commenttext">
                    @Html.EditorFor(m => m.CommentText, new { htmlAttributes = new { @class = "form-control", @placeholder = "Коментар" } })
                    <button class="btn btn-default">Відправити</button>
                </div>

            </div>
    }
</div>
