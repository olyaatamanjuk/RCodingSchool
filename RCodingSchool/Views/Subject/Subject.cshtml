@model List<StudLine.ViewModels.SubjectVM>
@{
    ViewBag.Title = "Subject";
}
<div class="container">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr onclick="location.href='link.com'">
                    <th>Назва предмету</th>
                    <th>Вид контролю</th>
                    <th>Календар подій</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(@x.Name, "Chapter", "Chapter", new { id = @x.Id}, null)</td>
                        @if (x.IsExam)
                        {
                            <td>Екзамен</td>
                        }
                        else
                        {
                            <td>Залік</td>
                        }
                        @if (!(String.IsNullOrWhiteSpace(x.Calendar)) || (User.IsInRole("Admin") || User.IsInRole("Teacher"))){
                        <td onclick="location.href='@Url.Action("Calendar", "Subject", new { id = @x.Id })'"><i class="fa fa-calendar fa-x2" aria-hidden="true"></i></td>
                        }
                        else
                        {
                            <td></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

