@model List<StudLine.ViewModels.TaskVM>
@{
    ViewBag.Title = "Tasks";
}
<div class="container">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Предмет</th>
                    <th>Завдання</th>
                    <th>Викладач</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.Subject.Name</td>
                        <td>@Html.ActionLink(@x.Name, "Task", "Subject", new { id = @x.Id }, null)</td>
                        <td>@x.Teacher.User.FirstName @x.Teacher.User.LastName</td>
                    </tr>}
            </tbody>
        </table>
    </div>
</div>



